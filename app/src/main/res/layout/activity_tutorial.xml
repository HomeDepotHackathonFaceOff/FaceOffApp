<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AppBlue"
    tools:context=".Intro">

    <Button
        android:id="@+id/button2"
        android:layout_width="174dp"
        android:layout_height="90dp"
        android:layout_marginEnd="53dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/gotitbutton"
        android:onClick="goToGamesScreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="135dp"
        android:layout_height="147dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/a2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="135dp"
        android:layout_height="147dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/a1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="127dp"
        android:layout_height="69dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="35dp"
        android:text="@string/sweet"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="127dp"
        android:layout_height="69dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="@string/noGood"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/pass"
        android:layout_width="110dp"
        android:layout_height="57dp"
        android:layout_marginBottom="107dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/passbutton"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/play"
        android:layout_width="110dp"
        android:layout_height="57dp"
        android:layout_marginBottom="75dp"
        android:layout_marginEnd="53dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/playbutton"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pass"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="16dp"
        android:text="@string/tutorial"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>